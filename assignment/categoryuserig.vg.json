{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Top 5 Categories of Instagram Influencers",
    "data": {"url": "https://raw.githubusercontent.com/nigelmuchineripi/data-visualization2/main/assignment/igdata.csv"},
    "width": 400,
    "height": 400,
    "transform": [
      {
        "aggregate": [{"op": "count", "field": "name", "as": "number_of_influencers"}],
        "groupby": ["Category"]
      },
      {
        "window": [{"op": "rank", "as": "rank"}],
        "sort": [{"field": "number_of_influencers", "order": "descending"}]
      },
      {"filter": "(datum.rank <= 5)"}
    ],
    "mark": "arc",
    "encoding": {
      "theta": {"field": "number_of_influencers", "type": "quantitative"},
      "color": {
        "field": "Category",
        "type": "nominal",
        "legend": {"title": "Category"},
        "scale": {"scheme": "tableau10"}
      },
      "tooltip": [
        {"field": "Category", "type": "nominal"},
        {"field": "number_of_influencers", "type": "quantitative", "title": "Number of Influencers"}
      ]
    },
    "view": {"stroke": null}
  }
  